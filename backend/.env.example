APP_NAME=Is Market Bluffing
APP_ENV=development

FRONTEND_ORIGIN=http://localhost:3000
FRONTEND_ORIGINS_CSV=
STRICT_ORIGIN_CHECK=true

# Local default (SQLite)
# DATABASE_URL=sqlite:///./data.db

# Supabase pooled connection example (serverless)
DATABASE_URL=postgresql+psycopg2://postgres.your-project-ref:your-db-password@aws-0-us-east-1.pooler.supabase.com:6543/postgres?sslmode=require

PRICE_CACHE_DIR=./app/cache/prices
META_CACHE_DIR=./app/cache/meta
DEFAULT_BETA_LOOKBACK_DAYS=730
DEFAULT_UNIVERSE_SIZE=300
DEFAULT_TOP_N_SEARCH=50
